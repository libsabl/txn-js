{
  "compilerOptions": {
    "strict": true,
    "incremental": true,
    "composite": true,
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "$": ["src/index.ts"],
      "$/*": ["src/*"],
      "$test/*": ["test/*"]
    }
  },
  "include": ["./src", "./test"]
}